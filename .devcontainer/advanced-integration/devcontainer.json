{
  "name": "Advanced Integration", 
  "workspaceFolder": "/workspaces/paypal-docs-KR/lessons/advanced-integration/",
  "dockerfile": "Dockerfile",
  "onCreateCommand": "../../paypal-docs-KR/lessons/advanced-integration/welcome-message.sh",
  "postCreateCommand": "npm install",
  "postAttachCommand": {
    "Start server": "npm start"
  },
  "forwardPorts": [8888],
  "portsAttributes": {
    "8888": {
      "label": "Preview of Advanced Checkout Flow",
      "onAutoForward": "openBrowserOnce"
    }
  },  
  "secrets": {    
    "CLIENT_ID": {
      "description": "Sandbox client ID of the application.",
      "documentationUrl": "https://developer.paypal.com/api/rest/"
    },
    "APP_SECRET": {
      "description": "Sandbox secret of the application.",
      "documentationUrl": "https://developer.paypal.com/api/rest/"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": ["vsls-contrib.codetour"],
      "settings": {
        "git.openRepositoryInParentFolders": "always"
      }
    }
  }
}
